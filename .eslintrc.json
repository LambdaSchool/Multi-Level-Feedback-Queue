{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "arrow-spacing": [
            "error",
            {
                "after": true,
                "before": true
            }
        ],
        "capitalized-comments": "off",
        "class-methods-use-this": "off",
        "comma-dangle": "off",
        "comma-spacing": [
            "error",
            {
                "after": true,
                "before": false
            }
        ],
        "comma-style": [
            "error",
            "last"
        ],
        "complexity": "error",
        "computed-property-spacing": [
            "error",
            "never"
        ],
        "func-style": [
            "error",
            "expression"
        ],
        "getter-return": "off",
        "id-length": "off",
        "implicit-arrow-linebreak": [
            "error",
            "beside"
        ],
        "indent": ["error", 4],
        "indent-legacy": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "lines-between-class-members": [
            "error",
            "always"
        ],
        "max-len": "off",
        "max-params": "off",
        "multiline-comment-style": [
            "error",
            "separate-lines"
        ],
        "newline-after-var": "off",
        "no-empty-function": "off",
        "no-magic-numbers": "off",
        "no-mixed-operators": "off",
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "no-ternary": "off",
        "no-trailing-spaces": "off",
        "no-unneeded-ternary": [
            "error",
            {
                "defaultAssignment": true
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "one-var": "off",
        "padded-blocks": "off",
        "prefer-const": "off",
        "quote-props": "off",
        "quotes": [
            "error",
            "single"
        ],
        "semi-spacing": [
            "error",
            {
                "after": true,
                "before": false
            }
        ],
        "sort-keys": "off",
        "space-before-function-paren": "off",
        "space-in-parens": [
            "error",
            "never"
        ],
        "space-infix-ops": "off",
        "space-unary-ops": "error",
        "spaced-comment": [
            "error",
            "always"
        ],
        "unicode-bom": [
            "error",
            "never"
        ],
        "yield-star-spacing": "error",
        "yoda": [
            "error",
            "never"
        ]
    }
}
